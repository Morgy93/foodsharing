#!/usr/bin/env node

const { join } = require('path')
const { spawn } = require('child_process')

const modules = require('../modules')

const base = join(__dirname, '..')

const globs = [
  join(base, '**/*.js'),
  ...modules.map(name => join(base, `../src/Modules/${name}/**/*.js`))
]

const args = process.argv.slice(2)
spawn(join(__dirname, '../node_modules/.bin/standard'), [...args, ...globs], {
  stdio: 'inherit'
})
