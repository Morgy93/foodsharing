#!/usr/bin/env node

const { join } = require('path')
const { spawn } = require('child_process')

const base = join(__dirname, '..')

const globs = [
  join(base, 'src/**/*.js'),
  join(base, '../src/**/*.js'),
  join(base, 'test/**/*.js'),
  join(base, '*.js')
]

const args = process.argv.slice(2)
spawn(join(__dirname, '../node_modules/.bin/standard'), [...args, ...globs], {
  stdio: 'inherit'
})
