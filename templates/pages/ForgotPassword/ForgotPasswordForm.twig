<div class="field reset-password">
	<div class="head ui-widget-header ui-corner-top">{{ 'password.reset'|trans }}</div>
	<div class="ui-widget ui-widget-content corner-bottom margin-bottom ui-padding">
		<div class="msg-inside info">
			<i class="fas fa-info-circle"></i>{{ 'password.insertmail'|trans }}
		</div>
		<form name="passReset" method="post" class="contact-form" action="{{ action }}">
			<div class="input-wrapper" id="email-wrapper">
				<label class="wrapper-label ui-widget" for="email">{{ email }}</label>
				<div class="element-wrapper">
					<input class="input text value" type="email" name="email" id="email" value="" autocomplete="email" required>
				</div>
				<input type="hidden" id="email-error-msg" value="">
				<div class="clear"></div>
			</div>
			<div class="input-wrapper">
				<p>
					<input class="button" type="submit" value="Senden">
				</p>
			</div>
		</form>
	</div>
</div>
