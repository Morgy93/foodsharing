{% extends 'pages/Region/baseRegion.twig' %}

{% block main %}
    {% if threads is defined %}
        {% include "partials/vue-wrapper.twig" with {
            id: 'vue-threadlist',
            component: 'ThreadList',
            props: {
                groupId: region.id,
                subforumId: sub=='botforum' ? 1 : 0,
            }
        } %}
    {% endif %}
    {% if threadId is defined %}
        {% include "partials/vue-wrapper.twig" with {
            id: 'vue-thread',
            component: "Thread",
            props: {
                id: threadId,
            }
        } %}
    {% endif %}
    {% if newThreadForm is defined %}
        {% include "partials/vue-wrapper.twig" with {
            id: 'vue-new-thread',
            component: "NewThread",
            props: {
                groupId: region.id,
                subforumId: sub=='botforum' ? 1 : 0,
                isModerated: region.moderated,
            }
        } %}
    {% endif %}
{% endblock %}
