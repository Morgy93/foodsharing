{% extends 'layouts/default.twig' %}

{% block top %}
    {% include 'partials/topbar.twig' with {
        'title': 'group.title'|trans,
        'subtitle': 'group.subtitle'|trans,
        'img': '/img/groups.png',
    } only %}
{% endblock %}

{% block left %}
    {% include 'pages/WorkGroup/sidenav.twig' %}
{% endblock %}

{% block main %}
    {% include 'partials/vue-wrapper.twig' with {
        id: 'vue-group-list',
        component: 'WorkingGroupList',
        props: {
            groups: groups
        }
    } %}
{% endblock %}

{% block right %}
{% endblock %}

{% block bottom %}
    {{ content.bottom.html | raw }}
{% endblock %}

