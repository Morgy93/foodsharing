{% import 'partials/menu.twig' as sidenav %}

{{ sidenav.menu_tree(nav.menu, null, nav.active) }}


{% embed 'components/field.twig' with {'title': (region.isWorkGroup ? 'terminology.admins' : 'terminology.ambassadors')|trans()} %}
    {% block content %}
        {% include 'partials/avatarList.twig' with {'id': 'admin-list', 'entries': region.admins}%}
    {% endblock %}
{% endembed %}

<div id="signout_sure" title="{{ 'are_you_sure'|trans }}">
    {% if region.isWorkGroup %}
        {% include 'partials/info.twig' with {'msg': 'group.really_quit_workgroup'|trans({'%name%': region.name})} %}
    {% else %}
        {% if region.isHomeDistrict %}
            {% include 'partials/info.twig' with {'msg': 'group.quitting_home_district_warning'|trans({'%name%': region.name})} %}
        {% else %}
            {% include 'partials/info.twig' with {'msg': 'group.really_quit_district'|trans({'%name%': region.name})} %}
        {% endif %}
    {% endif %}
    <input type="hidden" name="bid" class="bid" value="{{ region.id }}" />
</div>

