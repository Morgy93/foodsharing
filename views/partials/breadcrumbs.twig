{% if items|length > 0 %}
    <div>
        <ul class="bread inside">
            {% for item in items %}
                {% if loop.last %}
                    <li class="last">{{ item.name }}</li>
                {% else %}
                    <li><a href="{{ item.href }}">{{ item.name }}</a></li>
                {% endif %}
            {% endfor %}
        </ul>
        <div class="clear"></div>
    </div>
{% endif %}
